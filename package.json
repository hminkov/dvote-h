{
  "name": "dvote-h",
  "version": "0.0.1",
  "description": "Decentralized voting system on Hedera",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "workspaces": [
    "packages/client",
    "packages/common",
    "packages/services/election-service",
    "packages/services/vote-service",
    "packages/services/user-service",
    "packages/services/_local-service-starter"
  ],
  "scripts": {
    "build:prod": "npm run build -w @dvote/client -w @dvote/common",
    "test": "echo \"\\x1b[104m\\x1b[97m/common\\x1b[0m\" && npm run test -w @dvote/common && echo \"\\x1b[104m\\x1b[97m/election-service\\x1b[0m\" && npm run test -w @dvote/election-service",
    "test:integration": "echo \"\\x1b[104m\\x1b[97m/common\\x1b[0m\" && npm run test:integration -w @dvote/common",
    "run-migrations:dev": "cd packages/common && npm run run-migrations:dev",
    "run-migrations:test": "cd packages/common && npm run run-migrations:test",
    "start-api-debug:dev": "cd packages/services/_local-service-starter && npm run start-api-debug:dev",
    "start-api": "cd _scripts/ && ./start_api.sh"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/typeorm": "^10.0.0",
    "typeorm": "^0.3.17",
    "@hashgraph/sdk": "^2.42.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.4"
  },
  "devDependencies": {
    "@types/jest": "29.5.7",
    "@types/node": "20.8.10",
    "@typescript-eslint/eslint-plugin": "6.9.1",
    "@typescript-eslint/parser": "6.9.1",
    "eslint": "8.53.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "29.7.0",
    "prettier": "^2.3.2",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.1",
    "typescript": "5.2.2",
    "lint-staged": "7.3.0",
    "husky": "^1.0.0-rc.15"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{js,scss,css,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "resetMocks": true,
    "restoreMocks": true
  }
}
