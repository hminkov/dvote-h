{
  "name": "@dvote/common",
  "version": "1.0.0",
  "description": "Common models and data access for voting system",
  "main": "dist/index",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "npm run clean && npm run compile",
    "build:prod": "npm run clean && npm run compile:prod",
    "clean": "rm -rf ./dist",
    "compile": "tsc -p tsconfig.build.json --skipLibCheck",
    "compile:prod": "tsc -p tsconfig-prod.build.json --skipLibCheck",
    "test": "NODE_ENV=test DB_PORT=5444 jest --passWithNoTests --forceExit",
    "test:integration": "NODE_ENV=test DB_PORT=5444 jest --passWithNoTests --config ./jest-integration.json",
    "run-migrations:test": "NODE_ENV=test DB_PORT=5444 node dist/MigrationRunner.js",
    "run-migrations:dev": "DB_PORT=5432 DB_NAME=dvote_db DB_HOST=localhost NODE_ENV=development node dist/MigrationRunner.js"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/typeorm": "^10.0.0",
    "typeorm": "^0.3.17",
    "pg": "^8.11.3"
  },
  "private": true
}
